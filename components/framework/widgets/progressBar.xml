<?xml version="1.0" encoding="UTF-8"?>
<component name="ProgressBar" extends="Group">
    <script type="text/brightscript" uri="pkg:/components/framework/widgets/progressBar.brs" />
    
    <interface>
        <field id="width" type="float" onChange="updateLayout" />
        <field id="height" type="float" onChange="updateLayout" />
        <field id="padding" type="float" onChange="updateLayout" />

        <field id="backgroundColor" type="color" alias="backgroundRect.color" />
        <field id="backgroundUri" type="string" alias="background.uri" />
        <field id="barColor" type="color" alias="barRect.color" />
        <field id="barUri" type="string" alias="bar.uri" />
        
        <field id="minValue" type="integer" value="0" />
        <field id="maxValue" type="integer" value="100" />
        <field id="value" type="integer" value="0" onChange="onValueChanged" alwaysNotify="true" />
        
        <field id="tickMarks" type="floatarray" onChange="onTickMarksChanged" alwaysNotify="true" />
        <field id="tickColor" type="color" value="0xffffffff" />
    </interface>

    <children>
    	<Rectangle
    		id="backgroundRect"
    		color="0x00000000" />
        <Poster
            id="background"
            loadDisplayMode="scaleToFill" />
    	<Rectangle
    		id="barRect"
    		color="0x00000000" />
        <Poster
            id="bar"
            loadDisplayMode="scaleToFill" />
        <Group
        	id="ticks" />
    </children>
</component>