<?xml version="1.0" encoding="UTF-8"?>
<component name="Slideshow" extends="Group">
    
    <script type="text/brightscript" uri="pkg:/components/framework/widgets/slideshow.brs" />
    <script type="text/brightscript" uri="pkg:/components/framework/utilities/nodes.brs" />
    
    <script type="text/brightscript" uri="pkg:/source/framework/utilities/types.brs" />
    <script type="text/brightscript" uri="pkg:/source/framework/utilities/strings.brs" />

    <interface>
        <field id="width" type="float" value="100" />
        <field id="height" type="float" value="100" />
        <field id="loadWidth" type="float" value="0" />
        <field id="loadHeight" type="float" value="0" />
        <field id="advanceTime" type="time" value="5" onChange="onAdvanceTimeChanged" />
        <field id="content" type="node" onChange="onContentChanged" />
        <field id="videoState" type="string" value="none" />
        <field id="resetIndexOnContentChange" type="boolean" value="true" />
        <field id="index" type="integer" />
        <field id="loop" type="boolean" value="true" />
        <field id="loadDisplayMode" type="string" value="scaleToFill" />
    </interface>
    
    <children>
        <Animation 
            id="fadeOutAnimation"
            duration=".5"
            repeat="false"
            control="none"
            easeFunction="linear" >
            <FloatFieldInterpolator 
                id = "fadeOutInterpolator"
                key="[0.0, 1.0]" 
                keyValue="[1.0, 0.0]"
                fieldToInterp="current.opacity" />
        </Animation>
        <Timer
            id="switchTimer"
            duration="5" />
    </children>
</component>