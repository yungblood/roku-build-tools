<?xml version="1.0" encoding="UTF-8"?>
<component name="AnimatedSprite" extends="Group">
    <script type="text/brightscript" uri="pkg:/components/framework/widgets/animatedSprite.brs" />
    <interface>
        <field id="uri" type="string" alias="sprite.uri" />
        <field id="width" type="float" onChange="updateLayout" />
        <field id="height" type="float" onChange="updateLayout" />
        <field id="horizontalSlices" type="integer" onChange="updateLayout" />
        <field id="verticalSlices" type="integer" onChange="updateLayout" />
        <field id="frameDelay" type="float" alias="frameTimer.duration" />
        <field id="control" type="string" alias="frameTimer.control" />
    </interface>
    <children>
    	<Poster
    		id="sprite" />
    	<Timer
    		id="frameTimer"
    		duration=".100"
    		repeat="true" />
    </children>
</component>