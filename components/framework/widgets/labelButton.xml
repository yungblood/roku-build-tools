<?xml version="1.0" encoding="utf-8" ?>
<component name="LabelButton" extends="Group">
    <script type="text/brightscript" uri="pkg:/components/framework/widgets/labelButton.brs" />
    <interface>
        <field id="width" type="float" onChange="onLayoutChanged" />
        <field id="height" type="float" onChange="onLayoutChanged" />
        <field id="padding" type="float" onChange="onPaddingChanged" />
        <field id="paddingTop" type="float" onChange="onLayoutChanged" />
        <field id="paddingBottom" type="float" onChange="onLayoutChanged" />
        <field id="paddingLeft" type="float" onChange="onLayoutChanged" />
        <field id="paddingRight" type="float" onChange="onLayoutChanged" />

        <field id="wrap" type="boolean" value="true" onChange="onWrapChanged" />

        <field id="tts" type="string" />
        <field id="ttsComponentType" type="string" value="button" />

        <field id="itemContent" type="node" onChange="onItemContentChanged" />
        <field id="focusPercent" type="float" value="0" onChange="onFocusPercentChanged" />
        <field id="gridHasFocus" type="boolean" value="false" onChange="onFocusChanged" />
        <field id="processKeyEvents" type="boolean" value="true" />
        <field id="buttonSelected" type="boolean" alwaysNotify="true" />
        
        <field id="font" type="node" onChange="onFontChanged" />
        <field id="focusedFont" type="node" onChange="onFocusedFontChanged" />
        <field id="text" type="string" onChange="onTextChanged" />
        <field id="horizAlignment" type="string" onChange="onHorizAlignmentChanged" />
        <field id="vertAlignment" type="string" onChange="onVertAlignmentChanged" />
        <field id="backgroundColor" type="color" alias="background.color" />
        <field id="focusedBackgroundColor" type="color" alias="backgroundFocused.color" />
        <field id="backgroundUri" type="string" alias="backgroundImage.uri" />
        <field id="backgroundImageWidth" type="string" alias="backgroundImage.width" onChange="onLayoutChanged" />
        <field id="backgroundImageHeight" type="string" alias="backgroundImage.height" onChange="onLayoutChanged" />
        <field id="backgroundImageOpacity" type="float" value="1" onChange="onFocusChanged" />
        <field id="backgroundBlendColor" type="color" alias="backgroundImage.blendColor" />
        <field id="focusedBackgroundUri" type="string" alias="backgroundImageFocused.uri" />
        <field id="focusedBackgroundImageWidth" type="string" alias="backgroundImageFocused.width" onChange="onLayoutChanged" />
        <field id="focusedBackgroundImageHeight" type="string" alias="backgroundImageFocused.height" onChange="onLayoutChanged" />
        <field id="focusedBackgroundImageOpacity" type="float" value="1" onChange="onFocusChanged" />
        <field id="focusedBackgroundBlendColor" type="color" alias="backgroundImageFocused.blendColor" />
        <field id="foregroundUri" type="string" alias="foregroundImage.uri" />
        <field id="foregroundImageWidth" type="string" alias="foregroundImage.width" onChange="onLayoutChanged" />
        <field id="foregroundImageHeight" type="string" alias="foregroundImage.height" onChange="onLayoutChanged" />
        <field id="foregroundBlendColor" type="color" alias="foregroundImage.blendColor" />
        <field id="focusedForegroundUri" type="string" alias="foregroundImageFocused.uri" />
        <field id="focusedForegroundImageWidth" type="string" alias="foregroundImageFocused.width" onChange="onLayoutChanged" />
        <field id="focusedForegroundImageHeight" type="string" alias="foregroundImageFocused.height" onChange="onLayoutChanged" />
        <field id="focusedForegroundBlendColor" type="color" alias="foregroundImageFocused.blendColor" />
        <field id="textColor" type="color" alias="label.color" />
        <field id="focusedTextColor" type="color" alias="labelFocused.color" />
        
        <field id="iconUri" type="color" alias="icon.uri" />
        <field id="iconWidth" type="color" alias="icon.width" onChange="onLayoutChanged" />
        <field id="iconHeight" type="color" alias="icon.height" onChange="onLayoutChanged" />
        <field id="iconBlendColor" type="color" alias="icon.blendColor" />
        <field id="focusedIconUri" type="color" alias="iconFocused.uri" />
        <field id="focusedIconWidth" type="color" alias="iconFocused.width" onChange="onLayoutChanged" />
        <field id="focusedIconHeight" type="color" alias="iconFocused.height" onChange="onLayoutChanged" />
        <field id="focusedIconBlendColor" type="color" alias="iconFocused.blendColor" />
        
        <field id="forceFocus" type="boolean" onChange="onFocusChanged" />
        
        <field id="disabled" type="boolean" onChange="onDisabledChanged" />
        <field id="disabledTextColor" type="color" />
        <field id="disabledBackgroundBlendColor" type="color" />
        <field id="disabledOpacity" type="float" value=".25" />
        <field id="normalOpacity" type="float" value="1" onChange="onFocusChanged" />
        <field id="focusedOpacity" type="float" value="1" onChange="onFocusChanged" />

        <field id="forceUpperCase" type="boolean" />
    </interface>
    <children>
        <Rectangle
            id="background"
            color="0x00000000"
            opacity="1" />
        <Poster
            id="backgroundImage"
            opacity="1" />
        <Poster
            id="foregroundImage"
            opacity="1" />
        <Rectangle
            id="backgroundFocused"
            color="0x00000000"
            opacity="0" />
        <Poster
            id="backgroundImageFocused"
            opacity="0" />
        <Poster
            id="foregroundImageFocused"
            opacity="0" />
        <LayoutGroup
            id="labelGroup"
            layoutDirection="horiz">
            <Poster
                id="icon"
                width="0"
                height="0"
                opacity="1" />
            <Label
                id="label"
                color="0xffffffff"
                opacity="1"
                lineSpacing="0"
                wrap="true"
                horizAlign="center"
                vertAlign="center" />
        </LayoutGroup>
        <LayoutGroup
            id="labelGroupFocused"
            layoutDirection="horiz">
            <Poster
                id="iconFocused"
                width="0"
                height="0"
                opacity="0" />
            <Label
                id="labelFocused"
                color="0xffffffff"
                opacity="0"
                lineSpacing="0"
                wrap="true"
                horizAlign="center"
                vertAlign="center" />
        </LayoutGroup>
    </children>
</component>
    