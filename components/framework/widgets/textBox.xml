<?xml version="1.0" encoding="UTF-8"?>
<component name="TextBox" extends="Group">
    <script type="text/brightscript" uri="pkg:/components/framework/widgets/textBox.brs" />
    
    <interface>
        <field id="width" type="float" onChange="updateLayout" />
        <field id="height" type="float" onChange="updateLayout" />
        <field id="padding" type="float" value="10" onChange="updateLayout" />

        <field id="tts" type="string" />
        <field id="ttsComponentType" type="string" value="textbox" />

        <field id="horizAlign" type="string" onChange="onHorizAlignChanged" />
        <field id="vertAlign" type="string" onChange="onVertAlignChanged" />
        <field id="hintHorizAlign" type="string" onChange="onHintHorizAlignChanged" />
        <field id="hintVertAlign" type="string" onChange="onHintVertAlignChanged" />

        <field id="backgroundUri" type="string" alias="background.uri" />
        <field id="backgroundBlendColor" type="color" alias="background.blendColor" />
        <field id="backgroundColor" type="color" alias="backgroundRect.color" />
        <field id="focusedBackgroundUri" type="string" alias="focusedBackground.uri" />
        <field id="focusedBackgroundBlendColor" type="string" alias="focusedBackground.blendColor" />
        <field id="focusedBackgroundColor" type="color" alias="focusedBackgroundRect.color" />

        <field id="text" type="string" onChange="onTextChanged" />
        <field id="textColor" type="color" alias="label.color" />
        <field id="textFont" type="node" alias="label.font" />
        <field id="focusedTextColor" type="color" alias="focusedLabel.color" />
        <field id="focusedTextFont" type="node" alias="focusedLabel.font" />

        <field id="alwaysShowHint" type="boolean" />
        <field id="hintText" type="string" onChange="onHintTextChanged" />
        <field id="hintTextColor" type="color" alias="hintLabel.color" />
        <field id="hintTextFont" type="node" alias="hintLabel.font" />
        <field id="focusedHintTextColor" type="color" alias="focusedHintLabel.color" />
        <field id="focusedHintTextFont" type="node" alias="focusedHintLabel.font" />

        <field id="secureMode" type="boolean" value="false" onChange="onSecureModeChanged" />

        <field id="inputMask" type="string" />
        <field id="validationError" type="string" />
        <field id="isValid" type="boolean" />
        
        <field id="disabled" type="boolean" onChange="onDisabledChanged" />
        <field id="disabledOpacity" type="float" value=".5" />
        
        <field id="processKeyEvents" type="boolean" value="false" />
        <field id="textboxSelected" type="boolean" alwaysNotify="true" />
    </interface>

    <children>
        <Rectangle
            id="backgroundRect"
            color="0x00000000" />
        <Poster
            id="background" />
        <Rectangle
            id="focusedBackgroundRect"
            color="0x00000000"
            visible="false" />
        <Poster
            id="focusedBackground"
            visible="false" />
        <Label
            id="hintLabel"
            text=""
            color="0xc0c0c0ff"
            font="font:SmallSystemFont"
            vertAlign="center"
            numLines="1"
            wrap="false" />
        <Label
            id="focusedHintLabel"
            text=""
            color="-1"
            vertAlign="center"
            numLines="1"
            wrap="false"
            visible="false" />
        <Label
            id="label"
            text=""
            color="0xffffffff"
            font="font:SmallSystemFont"
            vertAlign="center"
            numLines="1"
            wrap="false" />
        <Label
            id="focusedLabel"
            text=""
            color="-1"
            vertAlign="center"
            numLines="1"
            wrap="false"
            visible="false" />
        <Timer
            id="maskTimer"
            duration="1" />
    </children>
</component>