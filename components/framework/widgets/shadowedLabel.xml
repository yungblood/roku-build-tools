<?xml version="1.0" encoding="UTF-8"?>
<component name="ShadowedLabel" extends="Group">
    <script type="text/brightscript" uri="pkg:/components/framework/widgets/shadowedLabel.brs" />
    
    <interface>
        <field id="text" type="string" onChange="onTextChanged" />
        <field id="color" type="color" onChange="onColorChanged" />
        <field id="shadowColor" type="color" onChange="onShadowColorChanged" />
        <field id="font" type="node" onChange="onFontChanged" />
        <field id="horizAlign" type="string" onChange="onHorizAlignChanged" />
        <field id="vertAlign" type="string" onChange="onVertAlignChanged" />
        <field id="width" type="float" onChange="onWidthChanged" />
        <field id="height" type="float" onChange="onHeightChanged" />
        <field id="numLines" type="integer" onChange="onNumLinesChanged" />
        <field id="maxLines" type="integer" onChange="onMaxLinesChanged" />
        <field id="wrap" type="boolean" onChange="onWrapChanged" />
        <field id="lineSpacing" type="float" onChange="onLineSpacingChanged" />
        <field id="displayPartialLines" type="boolean" onChange="onDisplayPartialLinesChanged" />
        <field id="ellipsizeOnBoundary" type="boolean" onChange="onEllipsizeOnBoundaryChanged" />
        <field id="truncateOnDelimiter" type="string" onChange="onTruncateOnDelimiterChanged" />
        <field id="wordBreakChars" type="string" onChange="onWordBreakCharsChanged" />
        <field id="ellipsisText" type="string" onChange="onEllipsisTextChanged" />

        <field id="shadowOffset" type="vector2d" alias="shadow.translation" />
    </interface>
    
    <children>
       <Label
           id="shadow"
           translation="[1,1]"
           color="0x000000ff" />
       <Label
           id="label"
           translation="[0,0]"
           color="0xffffffff" />
    </children>
</component>