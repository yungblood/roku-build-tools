<?xml version="1.0" encoding="utf-8" ?>
<component name="Checkbox" extends="Group">
	<script type="text/brightscript" uri="pkg:/components/framework/widgets/checkbox.brs" />
	<interface>
        <field id="width" type="float" onChange="updateLayout" />
        <field id="height" type="float" onChange="updateLayout" />
        <field id="padding" type="float" />
        <field id="checkPadding" type="float" value="10" onChange="onCheckPaddingChanged" />
        <field id="itemContent" type="node" onChange="onItemContentChanged" />
        <field id="checked" type="boolean" onChange="onCheckChanged" />
        <field id="autoToggle" type="boolean" value="true" />
        <field id="buttonSelected" type="boolean" alwaysNotify="true" />

        <field id="checkedIconUri" type="string" onChange="updateIcons" />
        <field id="uncheckedIconUri" type="string" onChange="updateIcons" />
        <field id="focusedCheckedIconUri" type="string" onChange="updateIcons" />
        <field id="focusedUncheckedIconUri" type="string" onChange="updateIcons" />
        <field id="checkedText" type="string" onChange="updateIcons" />
        <field id="uncheckedText" type="string" onChange="updateIcons" />

        <field id="font" type="node" onChange="onFontChanged" />
        <field id="focusedFont" type="node" onChange="onFocusedFontChanged" />
        <field id="text" type="string" onChange="onTextChanged" />
        <field id="backgroundColor" type="color" alias="background.color" />
        <field id="backgroundUri" type="string" alias="backgroundImage.uri" />
        <field id="backgroundBlendColor" type="color" alias="backgroundImage.blendColor" />
        <field id="focusedBackgroundColor" type="color" alias="backgroundFocused.color" />
        <field id="focusedBackgroundUri" type="string" alias="backgroundImageFocused.uri" />
        <field id="focusedBackgroundBlendColor" type="color" alias="backgroundImageFocused.blendColor" />
        <field id="textColor" type="color" alias="label.color" />
        <field id="focusedTextColor" type="color" alias="labelFocused.color" />
        <field id="checkTextColor" type="color" alias="checkLabel.color" />
        <field id="focusedCheckTextColor" type="color" alias="checkLabelFocused.color" />
        <field id="checkTextFont" type="node" alias="checkLabel.font" />
        <field id="focusedCheckTextFont" type="node" alias="checkLabelFocused.font" />

        <field id="disabled" type="boolean" onChange="onDisabledChanged" />
        <field id="disabledOpacity" type="float" value=".25" />
	</interface>
	<children>
        <Rectangle
            id="background"
            color="0x00000000"
            opacity="1" />
        <Poster
            id="backgroundImage"
            opacity="1" />
        <Rectangle
            id="backgroundFocused"
            color="0x00000000"
            opacity="0" />
        <Poster
            id="backgroundImageFocused"
            opacity="0" />
        <LayoutGroup
        	id="controls"
        	layoutDirection="horiz"
        	vertAlignment="center"
        	itemSpacings="[10,0]"
        	opacity="1">
			<Poster
	            id="checkbox" />
			<Label
	            id="label"
	            color="0xffffffff"
	            horizAlign="left"
	            vertAlign="center" />
			<Label
	            id="checkLabel"
	            color="0xffffffff"
	            horizAlign="right"
	            vertAlign="center" />
        </LayoutGroup>
        <LayoutGroup
        	id="controlsFocused"
        	layoutDirection="horiz"
        	vertAlignment="center"
        	itemSpacings="[10,0]"
        	opacity="0.001">
			<Poster
	            id="checkboxFocused" />
			<Label
	            id="labelFocused"
	            color="0xffffffff"
	            horizAlign="left"
	            vertAlign="center" />
			<Label
	            id="checkLabelFocused"
	            color="0xffffffff"
	            horizAlign="right"
	            vertAlign="center" />
        </LayoutGroup>
	</children>
</component>
    