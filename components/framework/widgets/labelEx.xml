<?xml version="1.0" encoding="utf-8" ?>
<component name="LabelEx" extends="Group">
	<script type="text/brightscript" uri="pkg:/components/framework/widgets/labelEx.brs" />
	<interface>
        <field id="width" type="float" onChange="onWidthChanged" />
        <field id="height" type="float" onChange="onHeightChanged" />
        <field id="padding" type="vector2d" onChange="onPaddingChanged" />

        <field id="font" type="node" alias="label.font" />
        <field id="text" type="string" alias="label.text" />
        <field id="horizAlign" type="string" alias="label.horizAlign" />
        <field id="vertAlign" type="string" alias="label.vertAlign" />
        <field id="backgroundColor" type="color" alias="background.color" />
        <field id="color" type="color" alias="label.color" />
        <field id="lineSpacing" type="float" alias="label.lineSpacing" />
        <field id="wrap" type="boolean" alias="label.wrap" />
	</interface>
	<children>
        <Rectangle
            id="background" />
		<Label
            id="label" />
	</children>
</component>
    