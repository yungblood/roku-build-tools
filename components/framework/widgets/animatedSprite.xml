<?xml version="1.0" encoding="UTF-8"?>
<component name="AnimatedSprite" extends="Group">
    <script type="text/brightscript" uri="pkg:/components/framework/widgets/animatedSprite.brs" />
    <script type="text/brightscript" uri="pkg:/components/framework/utilities/nodes.brs" />
    <interface>
        <field id="frameUri" type="string" onChange="onFrameUriChanged" />
        <field id="frames" type="integer" />
        <field id="width" type="float" onChange="updateLayout" />
        <field id="height" type="float" onChange="updateLayout" />
        <field id="frameDelay" type="float" alias="frameTimer.duration" />
        <field id="control" type="string" onChange="onControlChanged" />
        <field id="state" type="string" value="none" />
        <field id="resetOnStop" type="boolean" />
    </interface>
    <children>
    	<Poster
    		id="frame1" />
        <Poster
            id="frame2"
            visible="false" />
    	<Timer
    		id="frameTimer"
    		duration=".100" />
        <Timer
            id="visibilityTimer"
            duration="1"
            repeat="true"/>
    </children>
</component>