    <interface>
        <field id="itemSelected" type="node" alwaysNotify="true" />
        <field id="menuItemSelected" type="string" alwaysNotify="true" />
        <field id="buttonSelected" type="string" alwaysNotify="true" />
    </interface>
    <children>
        <LabelButtonGroup
            id="settingsButtons"
            translation="[132,222]"
            layoutDirection="vert"
            itemSpacings="[20]">
            <CBSCategoryButton
                id="account"
                text="My Account" />
            <CBSCategoryButton
                id="legal"
                text="Legal Notices" />
            <CBSCategoryButton
                id="support"
                text="Support" />
            <CBSCategoryButton
                id="liveTV"
                text="Live TV" />
        </LabelButtonGroup>
        <Group
            id="panels"
            translation="[412,219]">
            <AccountPanel
                id="accountPanel"
                visible="false" />
            <LegalPanel
                id="legalPanel"
                visible="false" />
            <SupportPanel
                id="supportPanel"
                visible="false" />
            <LiveTVPanelELO
                id="liveTVPanel"
                visible="false" />
        </Group>
        
        <TopMenu
            id="menu"
            focusedID="settings" />
    </children>
</component>
