<?xml version="1.0" encoding="utf-8" ?>
<component name="CbsDialog" extends="Group">
    <script type="text/brightscript" uri="pkg:/components/views/screens/cbsDialog.brs" />
    <script type="text/brightscript" uri="pkg:/components/shared/theme.brs" />
    <interface>
        <field id="title" type="string" alias="title.text" />
        <field id="message" type="string" alias="message.text" />
        <field id="messageColor" type="color" alias="message.color" />
        <field id="messageAlignment" type="color" alias="message.horizAlign" />
        <field id="buttons" type="stringarray" onChange="onButtonsChanged" />

        <field id="tabOrder" type="nodearray" />
        <field id="tabIndex" type="integer" />

        <field id="itemSpacings" type="intarray" alias="controls.itemSpacings" />
        <field id="contentGroup" type="node" />
        <field id="footerContentGroup" type="node" />
        <field id="includeTitle" type="boolean" value="true" onChange="onIncludeTitleChanged" />
        <field id="includeMessage" type="boolean" value="true" onChange="onIncludeMessageChanged" />
        <field id="includeContentSpacer" type="boolean" value="true" onChange="onIncludeContentSpacerChanged" />

        <field id="buttonWidth" type="integer" value="305" />
        <field id="buttonHeight" type="integer" value="62" />
        <field id="buttonLayoutDirection" type="string" alias="buttons.layoutDirection" />

        <field id="returnFocus" type="node" />
        
        <field id="buttonSelected" type="string" alwaysNotify="true" />
        <field id="autoClose" type="boolean" />
        <field id="allowBack" type="boolean" />

        <field id="close" type="boolean" alwaysNotify="true" />
    </interface>
    <children>
        <Rectangle
            width="1920"
            height="1080"
            color="0x000000e6">
            <LayoutGroup
                id="controls"
                translation="[960,540]"
                layoutDirection="vert"
                itemSpacings="[24]"
                horizAlignment="center"
                vertAlignment="center">
                <CBSLabel
                    id="title"
                    width="1920"
                    wrap="false"
                    horizAlign="center"
                    style="deca" />
                <CBSLabel
                    id="message"
                    width="1250"
                    horizAlign="center"
                    wrap="true"
                    style="deca"
                    weight="regular" />
                <Group
                    id="additionalContent" />
                <Rectangle
                    id="spacer"
                    color="0x00000000"
                    width="1"
                    height="1" />
                <LabelButtonGroup
                    id="buttons"
                    layoutDirection="horiz"
                    itemSpacings="[20]"
                    horizAlignment="center" />
                <Group
                    id="footerContent" />
            </LayoutGroup>
        </Rectangle>
    </children>
</component>
