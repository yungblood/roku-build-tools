<?xml version="1.0" encoding="UTF-8"?>
<component name="UpsellScreen" extends="BaseScreen">
    <script type="text/brightscript" uri="pkg:/components/views/screens/upsellScreen.brs" />
    <script type="text/brightscript" uri="pkg:/components/shared/constants.brs" />
    <interface>
        <field id="campaign" type="string" />
        <field id="upsellType" type="string" onChange="onUpsellTypeChanged" />
        <field id="upsellInfo" type="node" onChange="onUpsellInfoChanged" alwaysNotify="true" />
        <field id="buttons" type="stringarray" onChange="onButtonsChanged" />
        <field id="buttonSelected" type="string" alwaysNotify="true" />
    </interface>
    <children>
        <Font
            id="buttonFont"
            size="32"
            uri="pkg:/fonts/Lato-Regular.ttf" />

        <Poster
            id="background"
            width="1920"
            height="1080"
            loadDisplayMode="scaleToZoom" />
        <ResolutionAwarePoster
            id="logo"
            translation="[91,151]" />
            
        <Label
            id="message1"
            translation="[90,272]"
            width="950"
            color="0xffffffff"
            wrap="true"
            lineSpacing="0">
            <Font
                role="font"
                size="60"
                uri="pkg:/fonts/Lato-Light.ttf" />
        </Label>
        <Label
            id="message2"
            translation="[92,472]"
            width="950"
            color="0xffffffff"
            wrap="false">
            <Font
                role="font"
                size="44"
                uri="pkg:/fonts/Lato-Bold.ttf" />
        </Label>
        <Label
            id="message3"
            translation="[90,517]"
            width="950"
            color="0xa3a3a3ff"
            wrap="true">
            <Font
                role="font"
                size="44"
                uri="pkg:/fonts/Lato-Light.ttf" />
        </Label>

        <LabelButtonGroup
            id="buttons"
            translation="[91,607]"
            layoutDirection="vert"
            itemSpacings="[24]" />
    </children>
</component>
