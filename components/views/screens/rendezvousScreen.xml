<?xml version="1.0" encoding="utf-8" ?>
<component name="RendezvousScreen" extends="BaseScreen">
    <script type="text/brightscript" uri="pkg:/components/views/screens/rendezvousScreen.brs" />
    <interface>
        <field id="upsellInfo" type="node" onChange="onUpsellInfoChanged" alwaysNotify="true" />
        <field id="code" type="string" onChange="onCodeChanged" />
        <field id="success" type="boolean" alwaysNotify="true" />
    </interface>
    <children>
        <Font
            id="textFont"
            size="44"
            uri="pkg:/fonts/Lato-Light.ttf" />
        <Font
            id="codeFont"
            size="94.8"
            uri="pkg:/fonts/Lato-Light.ttf" />

        <Poster
            id="background"
            width="1920"
            height="1080"
            loadDisplayMode="scaleToZoom" />
        <ResolutionAwarePoster
            id="logo"
            translation="[91,151]" />
            
        <Label
            id="message1"
            translation="[91,255]"
            width="950"
            color="0xffffffff"
            wrap="true"
            lineSpacing="-2">
            <Font
                role="font"
                size="60"
                uri="pkg:/fonts/Lato-Regular.ttf" />
        </Label>
        <LayoutGroup
            translation="[94,481]"
            layoutDirection="horiz"
            itemSpacings="[10]">
            <Label
                color="0xa3a3a3ff"
                text="Step 1. Visit"
                font="dictionary:textFont" />
            <Label
                id="activationUrl"
                color="0x0092f3ff"
                font="dictionary:textFont" />
            <Label
                color="0xa3a3a3ff"
                text="on your computer"
                font="dictionary:textFont" />
        </LayoutGroup>
        <Label
            translation="[94,528]"
            color="0xa3a3a3ff"
            text="or mobile device"
            font="dictionary:textFont" />
        <Label
            translation="[94,603]"
            color="0xa3a3a3ff"
            text="Step 2. Enter the following code"
            font="dictionary:textFont" />
        <Label
            id="activationCode"
            translation="[97,667]"
            color="0x0092f3ff"
            font="dictionary:codeFont" />
        <Label
            translation="[94,801]"
            color="0xa3a3a3ff"
            text="Step 3. When complete this screen will refresh"
            font="dictionary:textFont" />
    </children>
</component>
