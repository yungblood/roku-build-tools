<?xml version="1.0" encoding="UTF-8"?>
<component name="CreateAccountScreen" extends="BaseScreen">
    <script type="text/brightscript" uri="pkg:/components/views/screens/createAccountScreen.brs" />
    <script type="text/brightscript" uri="pkg:/components/shared/utils.brs" />
    <script type="text/brightscript" uri="pkg:/components/shared/constants.brs" />
    <script type="text/brightscript" uri="pkg:/components/framework/utilities/dialogs.brs" />

    <script type="text/brightscript" uri="pkg:/source/framework/utilities/general.brs" />
    <script type="text/brightscript" uri="pkg:/source/framework/utilities/dateTime.brs" />
    <script type="text/brightscript" uri="pkg:/source/framework/utilities/debug.brs" />
    <script type="text/brightscript" uri="pkg:/source/framework/utilities/types.brs" />
    <script type="text/brightscript" uri="pkg:/source/framework/utilities/strings.brs" />
    <interface>
        <field id="productCode" type="string" />
        <field id="accountDetails" type="assocarray" alwaysNotify="true" />
        <field id="buttonSelected" type="string" alwaysNotify="true" />
    </interface>
    <children>
        <Font
            id="buttonFont"
            size="32"
            uri="pkg:/fonts/Proxima Nova A Semibold.ttf" />
        <Font
            id="tosButtonFont"
            size="26"
            uri="pkg:/fonts/Proxima Nova A Semibold.ttf" />
            
        <LayoutGroup
            translation="[960,540]"
            layoutDirection="vert"
            horizAlignment="center"
            vertAlignment="center"
            itemSpacings="[20,36]">
            <Label
                width="1920"
                horizAlign="center"
                text="Sign Up"
                color="0xe5e5e5ff">
                <Font
                    role="font"
                    uri="pkg:/fonts/Proxima Nova A Bold.ttf"
                    size="50" />
            </Label>
            <LabelButtonGroup
                id="form"
                layoutDirection="vert"
                itemSpacings="[18]"
                horizAlignment="center"
                vertAlignment="center">
                <TextBox
                    id="firstName"
                    width="700"
                    height="70"
                    padding="20"
                    hintText="First Name"
                    textColor="0xe6e6e6ff"
                    textFont="dictionary:buttonFont"
                    focusedTextColor="0xffffffff"
                    focusedTextFont="dictionary:buttonFont"
                    hintTextFont="dictionary:buttonFont"
                    hintTextColor="0x5d5d5dff"
                    focusedHintTextFont="dictionary:buttonFont"
                    focusedHintTextColor="0xa5a5a5ff"
                    backgroundUri="pkg:/images/ui/button_unfocused_$$RES$$.9.png"
                    backgroundColor="0xffffff22"
                    focusedBackgroundUri="pkg:/images/ui/focus_grid_$$RES$$.9.png"
                    focusedBackgroundColor="0xffffff22"
                    inputMask="^(.+)$"
                    validationError="Please enter a valid first name."
                    processKeyEvents="false" />
                <TextBox
                    id="lastName"
                    width="700"
                    height="70"
                    padding="20"
                    hintText="Last Name"
                    textColor="0xe6e6e6ff"
                    textFont="dictionary:buttonFont"
                    focusedTextColor="0xffffffff"
                    focusedTextFont="dictionary:buttonFont"
                    hintTextFont="dictionary:buttonFont"
                    hintTextColor="0x5d5d5dff"
                    focusedHintTextFont="dictionary:buttonFont"
                    focusedHintTextColor="0xa5a5a5ff"
                    backgroundUri="pkg:/images/ui/button_unfocused_$$RES$$.9.png"
                    backgroundColor="0xffffff22"
                    focusedBackgroundUri="pkg:/images/ui/focus_grid_$$RES$$.9.png"
                    focusedBackgroundColor="0xffffff22"
                    inputMask="^(.+)$"
                    validationError="Please enter a valid last name."
                    processKeyEvents="false" />
                <TextBox
                    id="email"
                    width="700"
                    height="70"
                    padding="20"
                    hintText="Email Address"
                    textColor="0xe6e6e6ff"
                    textFont="dictionary:buttonFont"
                    focusedTextColor="0xffffffff"
                    focusedTextFont="dictionary:buttonFont"
                    hintTextFont="dictionary:buttonFont"
                    hintTextColor="0x5d5d5dff"
                    focusedHintTextFont="dictionary:buttonFont"
                    focusedHintTextColor="0xa5a5a5ff"
                    backgroundUri="pkg:/images/ui/button_unfocused_$$RES$$.9.png"
                    backgroundColor="0xffffff22"
                    focusedBackgroundUri="pkg:/images/ui/focus_grid_$$RES$$.9.png"
                    focusedBackgroundColor="0xffffff22"
                    inputMask="^([A-Za-z0-9._%+-]+@[A-Za-z0-9.-]+\.[A-Za-z]{2,6})$"
                    validationError="Please enter a valid email address."
                    processKeyEvents="false" />
                <TextBox
                    id="password"
                    width="700"
                    height="70"
                    padding="20"
                    hintText="Password"
                    textColor="0xe6e6e6ff"
                    textFont="dictionary:buttonFont"
                    focusedTextColor="0xffffffff"
                    focusedTextFont="dictionary:buttonFont"
                    hintTextFont="dictionary:buttonFont"
                    hintTextColor="0x5d5d5dff"
                    focusedHintTextFont="dictionary:buttonFont"
                    focusedHintTextColor="0xa5a5a5ff"
                    backgroundUri="pkg:/images/ui/button_unfocused_$$RES$$.9.png"
                    backgroundColor="0xffffff22"
                    focusedBackgroundUri="pkg:/images/ui/focus_grid_$$RES$$.9.png"
                    focusedBackgroundColor="0xffffff22"
                    secureMode="true"
                    inputMask="^(.{6,128})$"
                    validationError="Please enter a valid password that is at least 6 characters."
                    processKeyEvents="false" />
                <TextBox
                    id="zipCode"
                    width="700"
                    height="70"
                    padding="20"
                    hintText="Zip Code"
                    textColor="0xe6e6e6ff"
                    textFont="dictionary:buttonFont"
                    focusedTextColor="0xffffffff"
                    focusedTextFont="dictionary:buttonFont"
                    hintTextFont="dictionary:buttonFont"
                    hintTextColor="0x5d5d5dff"
                    focusedHintTextFont="dictionary:buttonFont"
                    focusedHintTextColor="0xa5a5a5ff"
                    backgroundUri="pkg:/images/ui/button_unfocused_$$RES$$.9.png"
                    backgroundColor="0xffffff22"
                    focusedBackgroundUri="pkg:/images/ui/focus_grid_$$RES$$.9.png"
                    focusedBackgroundColor="0xffffff22"
                    inputMask="^([0-9]{5})$"
                    validationError="Please enter a valid 5-digit zip code."
                    processKeyEvents="false" />
                <TextBox
                    id="birthDate"
                    width="700"
                    height="70"
                    padding="20"
                    hintText="Birth Date"
                    textColor="0xe6e6e6ff"
                    textFont="dictionary:buttonFont"
                    focusedTextColor="0xffffffff"
                    focusedTextFont="dictionary:buttonFont"
                    hintTextFont="dictionary:buttonFont"
                    hintTextColor="0x5d5d5dff"
                    focusedHintTextFont="dictionary:buttonFont"
                    focusedHintTextColor="0xa5a5a5ff"
                    backgroundUri="pkg:/images/ui/button_unfocused_$$RES$$.9.png"
                    backgroundColor="0xffffff22"
                    focusedBackgroundUri="pkg:/images/ui/focus_grid_$$RES$$.9.png"
                    focusedBackgroundColor="0xffffff22"
                    inputMask="^(?:(?:(?:0?[13578]|1[02])(\/|-|\.)31)\1|(?:(?:0?[1,3-9]|1[0-2])(\/|-|\.)(?:29|30)\2))(?:(?:1[6-9]|[2-9]\d)?\d{2})$|^(?:0?2(\/|-|\.)29\3(?:(?:(?:1[6-9]|[2-9]\d)?(?:0[48]|[2468][048]|[13579][26])|(?:(?:16|[2468][048]|[3579][26])00)))$|^(?:(?:0?[1-9])|(?:1[0-2])))(\/|-|\.)(?:0?[1-9]|1\d|2[0-8])\4(?:(?:1[6-9]|[2-9]\d)?\d{4})$"
                    validationError="Please enter a valid date of birth in the following format: MM/DD/YYYY."
                    processKeyEvents="false" />
                <TextBox
                    id="gender"
                    width="700"
                    height="70"
                    padding="20"
                    hintText="Gender"
                    textColor="0xe6e6e6ff"
                    textFont="dictionary:buttonFont"
                    focusedTextColor="0xffffffff"
                    focusedTextFont="dictionary:buttonFont"
                    hintTextFont="dictionary:buttonFont"
                    hintTextColor="0x5d5d5dff"
                    focusedHintTextFont="dictionary:buttonFont"
                    focusedHintTextColor="0xa5a5a5ff"
                    backgroundUri="pkg:/images/ui/button_unfocused_$$RES$$.9.png"
                    backgroundColor="0xffffff22"
                    focusedBackgroundUri="pkg:/images/ui/focus_grid_$$RES$$.9.png"
                    focusedBackgroundColor="0xffffff22"
                    validationError="Please select a gender."
                    processKeyEvents="false" />
    
                <CBSButton
                    id="createAccount"
                    width="700"
                    text="Create Account"
                    processKeyEvents="false"
                    disabledOpacity=".5"
                    disabled="false" />
            </LabelButtonGroup>
            <LayoutGroup
                layoutDirection="horiz"
                horizAlignment="center"
                vertAlignment="center"
                itemSpacings="[15]">
                <Label
                    text="By clicking &quot;Create Account&quot; you are indicating that you have read and agree to the"
                    color="0xe5e5e5ff">
                    <Font
                        role="font"
                        uri="pkg:/fonts/Proxima Nova A Semibold.ttf"
                        size="24" />
                </Label>
                <CBSButton
                    id="tos"
                    height="60"
                    text="Terms of Use &amp; Privacy Policy"
                    processKeyEvents="true"
                    disabledOpacity=".5"
                    disabled="false" />
            </LayoutGroup>
        </LayoutGroup>

        <Button
             id="fakeButton"
             visible="false" />

        <ChannelStore
            id="store" />
    </children>
</component>
