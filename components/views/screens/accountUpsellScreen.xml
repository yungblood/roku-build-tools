<?xml version="1.0" encoding="UTF-8"?>
<component name="AccountUpsellScreen" extends="BaseScreen">
    <script type="text/brightscript" uri="pkg:/components/views/screens/accountUpsellScreen.brs" />
    <script type="text/brightscript" uri="pkg:/components/shared/constants.brs" />
    <script type="text/brightscript" uri="pkg:/components/shared/utils.brs" />
    <interface>
        <field id="mode" type="string" onChange="onModeChanged" />
        <field id="tourVideoID" type="string" />
        <field id="options" type="nodearray" onChange="onOptionsChanged" />
        <field id="buttons" type="stringarray" onChange="onButtonsChanged" />
        <field id="buttonSelected" type="string" alwaysNotify="true" />
        <field id="optionSelected" type="node" alwaysNotify="true" />
    </interface>
    <children>
        <Font
            id="titleFont"
            size="40"
            uri="pkg:/fonts/Proxima Nova A Bold.ttf" />
        <Font
            id="buttonFont"
            size="32"
            uri="pkg:/fonts/Proxima Nova A Semibold.ttf" />
        <Font
            id="disclaimerFont"
            size="24"
            uri="pkg:/fonts/Proxima Nova A Semibold.ttf" />
        <Font
            id="noButtonsFont"
            size="43"
            uri="pkg:/fonts/Proxima Nova A Semibold.ttf" />
            
<!--         <Poster -->
<!--             id="background" -->
<!--             width="1920" -->
<!--             height="1080" -->
<!--             uri="pkg:/images/bg_upsell.jpg" -->
<!--             loadDisplayMode="scaleToZoom" /> -->
        <Rectangle
            width="1920"
            height="1080"
            color="0x000000ff" />

        <CenteredPoster
            id="header"
            width="1920"
            height="250"
            visible="false" />

        <Label
            id="title"
            translation="[0,130]"
            width="1920"
            wrap="false"
            color="0xffffffff"
            horizAlign="center"
            font="dictionary:titleFont" />

        <LayoutGroup
            translation="[960,570]"
            layoutDirection="vert"
            itemSpacings="[50]"
            horizAlignment="center"
            vertAlignment="center">
            <LabelButtonGroup
                id="options"
                layoutDirection="horiz"
                itemSpacings="[60]">
            </LabelButtonGroup>
            <LabelButtonGroup
                id="buttons"
                layoutDirection="vert"
                itemSpacings="[25]"/>
        </LayoutGroup>
        <Label
            id="noButtons"
            translation="[335,750]"
            width="1250"
            wrap="true"
            lineSpacing="-10"
            color="0xbab9b9ff"
            horizAlign="center"
            text="It looks like you signed up for CBS All Access on another device. Please return there to manage your subscription. For additional help, please call customer service at 1.888.274.5343."
            font="dictionary:noButtonsFont"
            visible="false" />
        <Label
            id="disclaimer"
            translation="[0,960]"
            width="1920"
            wrap="true"
            lineSpacing="0"
            color="0xbab9b9ff"
            horizAlign="center"
            font="dictionary:disclaimerFont" />
            
        <ChannelStore
            id="store" />
    </children>
</component>
