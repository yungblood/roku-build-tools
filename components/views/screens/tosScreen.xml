<?xml version="1.0" encoding="utf-8" ?>
<component name="TOSScreen" extends="BaseScreen">
    <script type="text/brightscript" uri="pkg:/components/views/screens/tosScreen.brs" />
    <interface>
        <field id="productCode" type="string" />
        <field id="accountDetails" type="assocarray" />
        <field id="buttonSelected" type="string" alwaysNotify="true" />
    </interface>
    <children>
        <Font
            id="buttonFont"
            size="32"
            uri="pkg:/fonts/Proxima Nova A Semibold.ttf" />
          <Font
              id="focusedButtonFont"
            size="32" 
              uri="pkg:/fonts/Proxima Nova A Semibold.ttf" />
        <Font
            id="textFont"
            size="28" 
            uri="pkg:/fonts/Proxima Nova A Semibold.ttf" />
        <Label
            translation="[0,100]"
            width="1920"
            horizAlign="center"
            text="Terms of Use"
            color="0xe5e5e5ff">
              <Font
                  role="font"
                  uri="pkg:/fonts/Proxima Nova A Bold.ttf"
                  size="50" />
        </Label>
        <Rectangle
            translation="[180,180]"
            width="1560"
            height="645"
            color="0xffffff11" />
        <Rectangle
            id="textFocus"
            translation="[180,180]"
            width="1560"
            height="645"
            color="0xffffff11"
            visible="false" />
        
        <CBSScrollableText
            id="text"
            translation="[200,200]"
            width="1520"
            height="605"
            style="centi" />

        <LabelButtonGroup
            id="buttons"
            translation="[1740,850]"
            layoutDirection="horiz"
            itemSpacings="[20]"
            horizAlignment="right">
            <CBSButton
                id="ok"
                text="OK"
                processKeyEvents="false" />
        </LabelButtonGroup>
    </children>
</component>
