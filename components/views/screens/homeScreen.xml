<?xml version="1.0" encoding="UTF-8"?>
<component name="HomeScreen" extends="BaseScreen">
    <script type="text/brightscript" uri="pkg:/components/views/screens/homeScreen.brs" />
    <interface>
        <field id="itemSelected" type="node" alwaysNotify="true" />
        <field id="menuItemSelected" type="string" alwaysNotify="true" />
        
        <field id="content" type="assocarray" onChange="onContentChanged" />
        <field id="additionalContext" type="assocarray" />
    </interface>
    <children>
       <Font
           id="rowTitleFont"
           size="43"
           uri="pkg:/fonts/Lato-Light.ttf" />

        <MarqueeRow
            id="marquee"
            visible="false" />
        <Timer
            id="marqueeTimer"
            duration="5"
            repeat="true" />
<!--         <ScrollableList -->
<!--             id="list" -->
<!--             translation="[0,0]" -->
<!--             itemComponentName="ContentAwareRow" /> -->
        
        <RowList
            id="list"
            translation="[0,862]"
            focusXOffset="[100]"
            rowLabelOffset="[[98,13]]"
            itemComponentName="GridTile"
            itemSize="[1920,298]"
            itemSpacing="[0,40]"
            showRowLabel="[false]"
            rowItemSpacing="[[30,0]]"
            numRows="3"
            rowLabelFont="dictionary:rowTitleFont"
            rowLabelColor="0xffffffff"
            focusBitmapUri="pkg:/images/frame_grid2.9.png"
            drawFocusFeedback="false"
            vertFocusAnimationStyle="fixedFocus" />

<!--         <FocusGroup -->
<!--             id="list" -->
<!--             translation="[0,772]" -->
<!--             advanceKey="down" -->
<!--             reverseKey="up" /> -->

        <TopMenu
            id="menu"
            focusedID="home" />
            
        <Animation
            id="scrollAnimation"
            duration="0.3"
            delay="0"
            repeat="false">
            <Vector2DFieldInterpolator
                id="scrollInterp"
                key="[0,1]"
                keyValue="[[0,0],[0,0]]"
                fieldToInterp="list.translation" />
        </Animation>

        <ParallelAnimation
            id="fadeOutAnimation">
            <Animation
                id="marqueeFadeOutAnimation"
                duration=".3"
                delay="0"
                repeat="false">
                <FloatFieldInterpolator
                    key="[0,1]"
                    keyValue="[1,0]"
                    fieldToInterp="marquee.opacity" />
            </Animation>
            <Animation
                id="menuFadeOutAnimation"
                duration=".3"
                delay="0"
                repeat="false">
                <FloatFieldInterpolator
                    key="[0,1]"
                    keyValue="[1,0]"
                    fieldToInterp="menu.opacity" />
            </Animation>
        </ParallelAnimation>
        <ParallelAnimation
            id="fadeInAnimation">
            <Animation
                id="marqueeFadeInAnimation"
                duration=".3"
                delay="0"
                repeat="false">
                <FloatFieldInterpolator
                    key="[0,1]"
                    keyValue="[0,1]"
                    fieldToInterp="marquee.opacity" />
            </Animation>
            <Animation
                id="menuFadeInAnimation"
                duration=".3"
                delay="0"
                repeat="false">
                <FloatFieldInterpolator
                    key="[0,1]"
                    keyValue="[0,1]"
                    fieldToInterp="menu.opacity" />
            </Animation>
        </ParallelAnimation>
    </children>
</component>
