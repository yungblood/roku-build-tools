<?xml version="1.0" encoding="UTF-8"?>
<component name="HomeScreen" extends="BaseScreen">
    <script type="text/brightscript" uri="pkg:/components/views/screens/homeScreen.brs" />
    <interface>
        <field id="itemSelected" type="node" alwaysNotify="true" />
        <field id="menuItemSelected" type="string" alwaysNotify="true" />
        
        <field id="content" type="assocarray" onChange="onContentChanged" />
    </interface>
    <children>
        <MarqueeRow
            id="marquee"
            visible="false" />
        <Timer
            id="marqueeTimer"
            duration="5"
            repeat="true" />
<!--         <ScrollableList -->
<!--             id="list" -->
<!--             translation="[0,0]" -->
<!--             itemComponentName="ContentAwareRow" /> -->
        
        <FocusGroup
            id="list"
            translation="[0,772]"
            advanceKey="down"
            reverseKey="up" />

        <TopMenu
            id="menu"
            focusedID="home" />
            
        <Animation
            id="scrollAnimation"
            duration="0.3"
            delay="0"
            repeat="false">
            <Vector2DFieldInterpolator
                id="scrollInterp"
                key="[0,1]"
                keyValue="[[0,0],[0,0]]"
                fieldToInterp="list.translation" />
        </Animation>

        <ParallelAnimation
            id="fadeOutAnimation">
            <Animation
                id="marqueeFadeOutAnimation"
                duration=".3"
                delay="0"
                repeat="false">
                <FloatFieldInterpolator
                    key="[0,1]"
                    keyValue="[1,0]"
                    fieldToInterp="marquee.opacity" />
            </Animation>
            <Animation
                id="menuFadeOutAnimation"
                duration=".3"
                delay="0"
                repeat="false">
                <FloatFieldInterpolator
                    key="[0,1]"
                    keyValue="[1,0]"
                    fieldToInterp="menu.opacity" />
            </Animation>
        </ParallelAnimation>
        <ParallelAnimation
            id="fadeInAnimation">
            <Animation
                id="marqueeFadeInAnimation"
                duration=".3"
                delay="0"
                repeat="false">
                <FloatFieldInterpolator
                    key="[0,1]"
                    keyValue="[0,1]"
                    fieldToInterp="marquee.opacity" />
            </Animation>
            <Animation
                id="menuFadeInAnimation"
                duration=".3"
                delay="0"
                repeat="false">
                <FloatFieldInterpolator
                    key="[0,1]"
                    keyValue="[0,1]"
                    fieldToInterp="menu.opacity" />
            </Animation>
        </ParallelAnimation>
    </children>
</component>
