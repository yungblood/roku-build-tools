<?xml version="1.0" encoding="UTF-8"?>
<component name="ShowInfoScreen" extends="BaseScreen">
    <script type="text/brightscript" uri="pkg:/components/views/screens/showInfoScreen.brs" />
    <interface>
        <field id="showID" type="string" onChange="onShowIDChanged" />
        <field id="show" type="node" onChange="onShowChanged" />
        <field id="buttonSelected" type="string" alwaysNotify="true" />
    </interface>
    <children>
        <CrossfadePoster
            id="background"
            width="1920"
            height="1080"
            loadDisplayMode="scaleToZoom" />
        <Rectangle
            id="backgroundDarken"
            width="1920"
            height="1080"
            opacity="0" />
        <Poster
            id="backgroundOverlay"
            width="1920"
            height="1080"
            uri="pkg:/images/ui/overlay_show_darken.png" />

        <LayoutGroup
            id="metadata"
            translation="[128,173]"
            layoutDirection="vert"
            itemSpacings="[25]">
            <CBSLabel
                id="title"
                width="812"
                wrap="true"
                maxLines="2"
                style="mega" />
            <CBSLabel
                id="airTime"
                width="812"
                style="micro"
                opacity=".75" />
        </LayoutGroup>
        <CBSScrollableText
            id="description"
            width="812"
            height="496"
            style="deci"
            weight="regular"
            scrollLines="4"
            textOpacity=".75" />
    </children>
</component>
