<?xml version="1.0" encoding="UTF-8"?>
<component name="ShowScreenInt" extends="BaseScreen">
    <script type="text/brightscript" uri="pkg:/components/views/screens/showScreenInt.brs" />
    
    <interface>
        <field id="showID" type="string" onChange="onShowIDChanged" alwaysNotify="true" />
        <field id="show" type="node" onChange="onShowChanged" alwaysNotify="true" />

        <field id="itemSelected" type="node" alwaysNotify="true" />
        <field id="buttonSelected" type="string" alwaysNotify="true" />

        <field id="content" type="assocarray" onChange="onContentChanged" />
    </interface>
    <children>
       <Font
           id="rowTitleFont"
           size="43"
           uri="pkg:/fonts/Lato-Light.ttf" />

        <Poster
            id="hero"
            width="1920"
            height="1080"
            loadDisplayMode="scaleToZoom" />
        <Poster
            id="heroDarken"
            width="1920"
            height="1080"
            uri="pkg:/images/show-detail-hero-darken_int_480.png" />
        <Rectangle
            id="heroFadeRect"
            width="1920"
            height="1080"
            color="0x000000ff"
            opacity="0" />
        
        <DynamicPlayMarqueeTile
            id="dynamicPlay"
            translation="[100,297]" />

        <RowList
            id="list"
            translation="[0,867]"
            focusXOffset="[100]"
            rowLabelOffset="[[98,13]]"
            itemComponentName="GridTile"
            itemSize="[1920,298]"
            itemSpacing="[0,40]"
            showRowLabel="[true]"
            rowItemSpacing="[[30,0]]"
            numRows="3"
            rowLabelFont="dictionary:rowTitleFont"
            rowLabelColor="0xffffffff"
            focusBitmapUri="pkg:/images/frame_grid.9.png"
            vertFocusAnimationStyle="fixedFocus" />
        
<!--         <FocusGroup -->
<!--             id="list" -->
<!--             translation="[0,482]" -->
<!--             advanceKey="down" -->
<!--             reverseKey="up" /> -->

        <Animation
            id="scrollAnimation"
            duration="0.3"
            delay="0"
            repeat="false">
            <Vector2DFieldInterpolator
                id="scrollInterp"
                key="[0,1]"
                keyValue="[[0,0],[0,0]]"
                fieldToInterp="list.translation" />
        </Animation>

        <ParallelAnimation
            id="fadeOutAnimation">
            <Animation
                id="heroFadeOutAnimation"
                duration=".3"
                delay="0"
                repeat="false">
                <FloatFieldInterpolator
                    key="[0,1]"
                    keyValue="[1,0]"
                    fieldToInterp="hero.opacity" />
            </Animation>
            <Animation
                id="dynamicPlayFadeOutAnimation"
                duration=".3"
                delay="0"
                repeat="false">
                <FloatFieldInterpolator
                    key="[0,1]"
                    keyValue="[1,0]"
                    fieldToInterp="dynamicPlay.opacity" />
            </Animation>
        </ParallelAnimation>
        <ParallelAnimation
            id="fadeInAnimation">
            <Animation
                id="heroFadeInAnimation"
                duration=".3"
                delay="0"
                repeat="false">
                <FloatFieldInterpolator
                    key="[0,1]"
                    keyValue="[0,1]"
                    fieldToInterp="hero.opacity" />
            </Animation>
            <Animation
                id="dynamicPlayFadeInAnimation"
                duration=".3"
                delay="0"
                repeat="false">
                <FloatFieldInterpolator
                    key="[0,1]"
                    keyValue="[0,1]"
                    fieldToInterp="dynamicPlay.opacity" />
            </Animation>
        </ParallelAnimation>
    </children>
</component>
