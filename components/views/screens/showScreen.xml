<?xml version="1.0" encoding="UTF-8"?>
<component name="ShowScreen" extends="BaseScreen">
    <script type="text/brightscript" uri="pkg:/components/views/screens/showScreen.brs" />
    
    <interface>
        <field id="showID" type="string" onChange="onShowIDChanged" alwaysNotify="true" />
        <field id="show" type="node" onChange="onShowChanged" alwaysNotify="true" />
        <field id="episodeID" type="string" onChange="onEpisodeIDChanged" alwaysNotify="true" />
        <field id="autoplay" type="boolean" />
        <field id="triggerDynamicPlay" type="boolean" />

        <field id="itemSelected" type="node" alwaysNotify="true" />
        <field id="buttonSelected" type="string" alwaysNotify="true" />

        <field id="content" type="assocarray" onChange="onContentChanged" alwaysNotify="true" />
        <field id="additionalContext" type="assocarray" />
    </interface>
    <children>
       <Font
           id="rowTitleFont"
           size="43"
           uri="pkg:/fonts/Lato-Light.ttf" />

        <DynamicPlayMarqueeTile
            id="dynamicPlay" />

        <Rectangle
            id="heroFadeRect"
            width="1920"
            height="1080"
            color="0x000000ff"
            opacity="0" />

        <RowList
            id="list"
            translation="[0,867]"
            focusXOffset="[100]"
            rowLabelOffset="[[98,13]]"
            itemComponentName="GridTile"
            itemSize="[1920,298]"
            itemSpacing="[0,40]"
            showRowLabel="[true]"
            rowItemSpacing="[[30,0]]"
            numRows="3"
            rowLabelFont="dictionary:rowTitleFont"
            rowLabelColor="0xffffffff"
            focusBitmapUri="pkg:/images/frame_grid.9.png"
            drawFocusFeedback="false"
            vertFocusAnimationStyle="fixedFocus" />
        
        <Rectangle
            id="loadMask"
            width="1920"
            height="1080"
            color="0x000000ff" />

        <Animation
            id="scrollAnimation"
            duration="0.3"
            delay="0"
            repeat="false">
            <Vector2DFieldInterpolator
                id="scrollInterp"
                key="[0,1]"
                keyValue="[[0,0],[0,0]]"
                fieldToInterp="list.translation" />
        </Animation>
        
        <ParallelAnimation
            id="fadeOutAnimation">
            <Animation
                id="heroFadeOutAnimation"
                duration=".3"
                delay="0"
                repeat="false">
                <FloatFieldInterpolator
                    key="[0,1]"
                    keyValue="[0,1]"
                    fieldToInterp="heroFadeRect.opacity" />
            </Animation>
            <Animation
                id="dynamicPlayFadeOutAnimation"
                duration=".3"
                delay="0"
                repeat="false">
                <FloatFieldInterpolator
                    key="[0,1]"
                    keyValue="[1,0]"
                    fieldToInterp="dynamicPlay.opacity" />
            </Animation>
        </ParallelAnimation>
        <ParallelAnimation
            id="fadeInAnimation">
            <Animation
                id="heroFadeInAnimation"
                duration=".3"
                delay="0"
                repeat="false">
                <FloatFieldInterpolator
                    key="[0,1]"
                    keyValue="[1,0]"
                    fieldToInterp="heroFadeRect.opacity" />
            </Animation>
            <Animation
                id="dynamicPlayFadeInAnimation"
                duration=".3"
                delay="0"
                repeat="false">
                <FloatFieldInterpolator
                    key="[0,1]"
                    keyValue="[0,1]"
                    fieldToInterp="dynamicPlay.opacity" />
            </Animation>
        </ParallelAnimation>
    </children>
</component>
