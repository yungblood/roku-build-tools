<?xml version="1.0" encoding="UTF-8"?>
<component name="MovieScreen" extends="BaseScreen">
    <script type="text/brightscript" uri="pkg:/components/views/screens/movieScreen.brs" />
    <interface>
        <field id="autoPlay" type="boolean" />
        <field id="movieID" type="string" onChange="onMovieIDChanged" />
        <field id="movie" type="node" onChange="onMovieChanged" alwaysNotify="true" />
        <field id="buttonSelected" type="string" alwaysNotify="true" />
    </interface>
    <children>
        <CrossfadePoster
            id="background"
            width="1920"
            height="1080"
            loadDisplayMode="scaleToZoom" />
        <Rectangle
            id="backgroundDarken"
            width="1920"
            height="1080"
            opacity="0.8" />
        <Poster
            id="backgroundOverlay"
            translation="[0,678]"
            width="1920"
            height="402"
            uri="pkg:/images/ui/overlay_details_darken.png" />
        <Poster
            id="poster"
            translation="[980,178]"
            width="812"
            height="456"
            loadDisplayMode="scaleToZoom">
            <CBSProgressBar
                id="progressBar"
                translation="[24,430]"
                width="764"
                height="6"
                visible="false" />
        </Poster>
            
        <LayoutGroup
            id="metadata"
            translation="[128,173]"
            layoutDirection="vert"
            itemSpacings="[22,48]">
            <CBSLabel
                id="movieTitle"
                width="812"
                wrap="true"
                maxLines="2"
                style="mega" />
            <LayoutGroup
                id="badges"
                layoutDirection="horiz"
                itemSpacings="[16]"
                vertAlignment="center">
                <CBSLabel
                    id="airDate"
                    style="micro"
                    opacity=".75" />
            </LayoutGroup>
            <LabelButtonGroup
                id="buttons"
                translation="[991,691]"
                layoutDirection="horiz"
                itemSpacings="[24]"
                visible="false">
                <CBSButton
                    id="resume"
                    text="RESUME"
                    processKeyEvents="false" />
                <CBSButton
                    id="watch"
                    text=""
                    processKeyEvents="false" />
                <CBSButton
                    id="trailer"
                    text="PREVIEW TRAILER"
                    processKeyEvents="false" />
            </LabelButtonGroup>
        </LayoutGroup>
        <CBSScrollableText
            id="movieDescription"
            width="812"
            height="364"
            style="deci"
            weight="regular"
            scrollLines="4"
            textOpacity=".75" />
    </children>
</component>
