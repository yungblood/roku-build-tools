<?xml version="1.0" encoding="UTF-8"?>
<component name="SettingsItem" extends="Group">
    <script type="text/brightscript" uri="pkg:/components/views/widgets/settingsItem.brs" />
    <interface>
        <field id="itemContent" type="node" onChange="onItemContentChanged" />
        <field id="focusPercent" type="float" onChange="onFocusPercentChanged" />
        <field id="listHasFocus" type="boolean" onChange="onFocusPercentChanged" />
    </interface>
    <children>
           <Font
               id="titleFont"
             size="44"
             uri="pkg:/fonts/Lato-Regular.ttf" />
           <Font
               id="titleFontBold"
               size="44"
               uri="pkg:/fonts/Lato-Bold.ttf" />
        <Label
            id="title"
            vertAlign="center"
            color="0xffffffff"
            font="dictionary:titleFont" />
    </children>
</component>
