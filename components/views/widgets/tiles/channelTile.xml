<?xml version="1.0" encoding="UTF-8"?>
<component name="ChannelTile" extends="Group">
    <script type="text/brightscript" uri="pkg:/components/views/widgets/tiles/channelTile.brs" />
    <script type="text/brightscript" uri="pkg:/components/shared/theme.brs" />

    <script type="text/brightscript" uri="pkg:/source/framework/utilities/general.brs" />
    <script type="text/brightscript" uri="pkg:/source/framework/utilities/types.brs" />
    <script type="text/brightscript" uri="pkg:/source/framework/utilities/strings.brs" />
    <script type="text/brightscript" uri="pkg:/source/framework/utilities/dateTime.brs" />
    <interface>
        <field id="height" type="float" onChange="updateLayout" />
        <field id="width" type="float" onChange="updateLayout" />

        <field id="itemContent" type="node" onChange="onContentChanged" />
        <field id="gridHasFocus" type="boolean" onChange="onFocusChanged" />
        <field id="focusPercent" type="float" onChange="onFocusChanged" />
    </interface>
    <children>
        <Rectangle
            id="background"
            width="435"
            height="261"
            color="0x2b2b2bff">
            <Poster
                id="logo"
                translation="[0,50]"
                width="436"
                height="72"
                loadDisplayMode="scaleToFit" />
            <CBSLabel
                id="error"
                translation="[90,52]"
                width="199"
                style="deca"
                wrap="true" />
            <CBSLabel
                id="showTitle"
                translation="[44,168]"
                width="348"
                horizAlign="center"
                style="centi"
                wrap="false" />
        </Rectangle>
        <Rectangle
            id="liveNow"
            translation="[354,0]"
            width="81"
            height="32"
            color="0x0092f3ff"
            visible="false">
            <CBSLabel
                width="80"
                height="34"
                style="mili"
                weight="bold"
                text="LIVE"
                horizAlign="center"
                vertAlign="center" />
        </Rectangle>
        <Poster
            id="focusFrame"
            width="436"
            height="248"
            uri="pkg:/images/ui/focus_grid_$$RES$$.9.png"
            visible="false" />

        <Timer
            id="updateTimer"
            duration="5"
            repeat="true" />
    </children>
</component>
