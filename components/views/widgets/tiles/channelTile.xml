<?xml version="1.0" encoding="UTF-8"?>
<component name="ChannelTile" extends="Group">
    <script type="text/brightscript" uri="pkg:/components/views/widgets/tiles/channelTile.brs" />

    <script type="text/brightscript" uri="pkg:/source/framework/utilities/general.brs" />
    <script type="text/brightscript" uri="pkg:/source/framework/utilities/types.brs" />
    <script type="text/brightscript" uri="pkg:/source/framework/utilities/strings.brs" />
    <script type="text/brightscript" uri="pkg:/source/framework/utilities/dateTime.brs" />
    <interface>
        <field id="height" type="float" onChange="updateLayout" />
        <field id="width" type="float" onChange="updateLayout" />

        <field id="itemContent" type="node" onChange="onContentChanged" />
        <field id="gridHasFocus" type="boolean" onChange="onFocusChanged" />
        <field id="focusPercent" type="float" onChange="onFocusChanged" />
    </interface>
    <children>
        <Rectangle
            id="background"
            width="435"
            height="261"
            color="0x2b2b2bff">
            <Poster
                id="logo"
                translation="[0,50]"
                width="436"
                height="72"
                loadDisplayMode="scaleToFit" />
            <Label
                id="error"
                translation="[90,52]"
                width="199"
                color="0xffffffff"
                wrap="true"
                lineSpacing="0"
                text="">
                <Font
                    role="font"
                    size="38"
                    uri="pkg:/fonts/Lato-Regular.ttf" />
            </Label>
            <Label
                id="showTitle"
                translation="[44,168]"
                width="348"
                horizAlign="center"
                color="0xffffffff"
                wrap="false"
                text="">
                <Font
                    role="font"
                    size="28"
                    uri="pkg:/fonts/Lato-Regular.ttf" />
            </Label>
        </Rectangle>
        <Rectangle
            id="liveNow"
            translation="[354,0]"
            width="81"
            height="32"
            color="0x0092f3ff"
            visible="false">
            <Label
                width="80"
                height="32"
                color="0xffffffff"
                wrap="false"
                text="LIVE"
                horizAlign="center"
                vertAlign="center">
                <Font
                    role="font"
                    size="27"
                    uri="pkg:/fonts/Lato-Bold.ttf" />
            </Label>
        </Rectangle>
        <Poster
            id="focusFrame"
            width="436"
            height="248"
            uri="pkg:/images/frame_grid.9.png"
            visible="false" />

        <Timer
            id="updateTimer"
            duration="5"
            repeat="true" />
    </children>
</component>
