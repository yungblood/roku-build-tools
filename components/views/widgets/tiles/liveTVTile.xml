<?xml version="1.0" encoding="UTF-8"?>
<component name="LiveTVTile" extends="Group">
    <script type="text/brightscript" uri="pkg:/components/views/widgets/tiles/liveTVTile.brs" />
    <script type="text/brightscript" uri="pkg:/components/shared/utils.brs" />
    
    <script type="text/brightscript" uri="pkg:/source/framework/utilities/general.brs" />
    <script type="text/brightscript" uri="pkg:/source/framework/utilities/types.brs" />
    <script type="text/brightscript" uri="pkg:/source/framework/utilities/strings.brs" />
    <script type="text/brightscript" uri="pkg:/source/framework/utilities/dateTime.brs" />
    <interface>
        <field id="itemContent" type="node" onChange="onContentChanged" />

        <field id="width" type="float" onChange="updateLayout" />
        <field id="height" type="float" onChange="updateLayout" />

        <field id="gridHasFocus" type="boolean" onChange="updateFocus" />
        <field id="focusPercent" type="float" onChange="updateFocus"  alias="focusedBackground.opacity" />
    </interface>
    <children>
        <Rectangle
            id="background"
            color="0x212121ff" />
        <Rectangle
            id="focusedBackground"
            color="0x0092f3ff"
            opacity="0" />

        <LayoutGroup
            id="iconGroup"
            horizAlignment="center"
            vertAlignment="center">
            <Poster
                id="icon"
                width="150"
                height="96"
                loadDisplayMode="scaleToFit" />
        </LayoutGroup>
        <CBSLabel
            id="callSign"
            style="deca"
            vertAlign="bottom" />
        <CBSLabel
            id="location"
            style="centi"
            vertAlign="top" />
    </children>
</component>
