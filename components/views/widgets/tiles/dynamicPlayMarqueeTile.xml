            <Label
                id="description"
                width="896"
                font="dictionary:descriptionFont"
                maxLines="3"
                lineSpacing="2"
                wrap="true"
                color="0xffffffff" />
            <Rectangle
                width="1"
                height="46"
                color="0x00000000" />
            <LabelButton
                id="button"
                width="600"
                height="88"
                text=""
                backgroundUri="pkg:/images/frame_generic.9.png"
                focusedBackgroundUri="pkg:/images/button_focus.9.png"
