<?xml version="1.0" encoding="UTF-8"?>
<component name="EpisodeTile" extends="Group">
    <script type="text/brightscript" uri="pkg:/components/views/widgets/tiles/episodeTile.brs" />
    <script type="text/brightscript" uri="pkg:/components/shared/utils.brs" />

    <script type="text/brightscript" uri="pkg:/source/framework/utilities/general.brs" />
    <script type="text/brightscript" uri="pkg:/source/framework/utilities/types.brs" />
    <script type="text/brightscript" uri="pkg:/source/framework/utilities/strings.brs" />
    <script type="text/brightscript" uri="pkg:/source/framework/utilities/dateTime.brs" />
    <interface>
        <field id="itemContent" type="node" onChange="onContentChanged" />
        <field id="width" type="float" onChange="updateLayout" />
        <field id="height" type="float" onChange="updateLayout" />
    </interface>
    <children>
        <Font
            id="titleFont"
            size="24"
            uri="pkg:/fonts/Lato-Bold.ttf" />
        <Font
            id="subtitleFont"
            size="24"
            uri="pkg:/fonts/Lato-Regular.ttf" />
        <CrossfadePoster
            id="poster"
            loadDisplayMode="scaleToZoom" />
        <Poster
            id="largeDarken"
            uri="pkg:/images/large-thumb-darken.png"
            visible="false" />
        <Poster
            id="smallDarken"
            uri="pkg:/images/small-thumb-darken.png"
            visible="false" />
        <LayoutGroup
            id="metadata"
            layoutDirection="vert"
            vertAlignment="bottom"
            itemSpacings="[0,10]">
            <Label
                id="title"
                color="0xfefefeff"
                vertAlign="bottom"
                wrap="false"
                font="dictionary:titleFont" />
            <Label
                id="subtitle"
                color="0xfefefeff"
                vertAlign="bottom"
                wrap="false"
                font="dictionary:subtitleFont" />
            <ProgressBar
                id="progressBar"
                backgroundColor="0xffffff33"
                barColor="0x0092f3ff"
                height="4" />
        </LayoutGroup>
    </children>
</component>
