<?xml version="1.0" encoding="UTF-8"?>
<component name="MarqueeTile" extends="Group">
    <script type="text/brightscript" uri="pkg:/components/views/widgets/tiles/marqueeTile.brs" />
    <interface>
        <field id="itemContent" type="node" onChange="onContentChanged" />
        <field id="width" type="float" onchange="updateLayout" />
        <field id="height" type="float" onChange="updateLayout" />

        <field id="gridHasFocus" type="boolean" onChange="onGridFocusChanged" />
    </interface>
    <children>
        <FadeInPoster
            id="poster"
            fadeDuration=".5"
            loadDisplayMode="scaleToZoom"/>
        <Poster
            id="marqueeDarken"
            width="1920"
            height="1080"
            uri="pkg:/images/ui/overlay_marquee_darken.png" />
        <LayoutGroup
            id="metadata"
            translation="[128,748]"
            layoutDirection="vert"
            vertAlignment="bottom">
            <CBSLabel
                id="title"
                width="800"
                maxLines="3"
                wrap="true"
                style="mega" />
            <CBSLabel
                id="subtitle"
                width="800"
                maxLines="3"
                wrap="true"
                style="deca" />
            <CBSButton
                id="actionButton"
                processKeyEvents="false" />
        </LayoutGroup>
    </children>
</component>
