<?xml version="1.0" encoding="UTF-8"?>
<component name="MarqueeTile" extends="Group">
    <script type="text/brightscript" uri="pkg:/components/views/widgets/tiles/marqueeTile.brs" />
    <interface>
        <field id="itemContent" type="node" onChange="onContentChanged" />
        <field id="width" type="float" />
        <field id="height" type="float" />
        <field id="currRect" type="rect2d" onChange="onCurrRectChanged" />
    </interface>
    <children>
        <Font
            id="titleFont"
            size="68.9"
            uri="pkg:/fonts/Lato-Black.ttf" />
        <Poster
            id="poster"
            loadDisplayMode="scaleToZoom"/>
        <Poster
            id="marqueeDarken"
            width="1920"
            height="1080"
            uri="pkg:/images/home-hero-darken.png" />
        <Label
            id="title"
            translation="[99,200]"
            width="500"
            height="296"
            lineSpacing="-20"
            color="0xffffffff"
            vertAlign="bottom"
            wrap="true"
            font="dictionary:titleFont" />
    </children>
</component>
