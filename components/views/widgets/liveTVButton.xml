<?xml version="1.0" encoding="UTF-8"?>
<component name="LiveTVButton" extends="LabelButton">
    <script type="text/brightscript" uri="pkg:/components/views/widgets/liveTVButton.brs" />
    <script type="text/brightscript" uri="pkg:/components/shared/theme.brs" />
    <interface>
        <field id="station" type="node" onChange="onStationChanged" />
        <field id="selected" type="boolean" onChange="onSelectedChanged" />
    </interface>
    <children>
        <LayoutGroup
            id="group"
            layoutDirection="vert"
            horizAlignment="center"
            vertAlignment="center"
            itemSpacings="[20]">
            <Poster
                id="logo"
                height="72"
                loadDisplayMode="scaleToFit" />
            <CBSLabel
                id="title"
                horizAlign="center"
                style=""
                wrap="false"
                text="centi" />
        </LayoutGroup>
        <Poster
            id="frame"
            uri="pkg:/images/ui/focus_grid_$$RES$$.9.png" />
    </children>
</component>
