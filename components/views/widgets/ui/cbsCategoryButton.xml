<?xml version="1.0" encoding="UTF-8"?>
<component name="CBSCategoryButton" extends="Group">
    <script type="text/brightscript" uri="./cbsCategoryButton.brs" />
    <script type="text/brightscript" uri="pkg:/components/shared/theme.brs" />
    <interface>
        <field id="highlighted" type="boolean" onChange="onHighlightedChanged" />

        <field id="text" type="string" alias="label.text" />
        <field id="style" type="string" alias="label.style" />
        <field id="category" type="node" onChange="onCategoryChanged" />
        <field id="ttsComponentType" type="string" value="button" />
    </interface>
    <children>
        <CBSLabel
            id="label"
            style="micro"
            weight="regular" />
        <Poster
            id="focus"
            height="4"
            uri="pkg:/images/ui/focus_nav.9.png"
            visible="false" />
    </children>
</component>
