<?xml version="1.0" encoding="UTF-8"?>
<component name="CBSProgressBar" extends="Group">
    <script type="text/brightscript" uri="./cbsProgressBar.brs" />
    <interface>
        <field id="width" type="float" onChange="updateLayout" />
        <field id="height" type="float" value="6" onChange="updateLayout" />

        <field id="maxValue" type="float" onChange="updateProgress" />
        <field id="value" type="float" onChange="updateProgress" />
    </interface>
    <children>
        <Group
            id="wellGroup"
            opacity=".6">
            <Poster
                id="leftWell"
                width="4"
                height="6"
                uri="pkg:/images/ui/progress_left_well_$$RES$$.png" />
            <Poster
                id="well"
                height="6"
                uri="pkg:/images/ui/progress_well.png" />
            <Poster
                id="rightWell"
                width="4"
                height="6"
                uri="pkg:/images/ui/progress_right_well_$$RES$$.png" />
        </Group>
        <Group
            id="progressGroup">
            <Poster
                id="leftProgress"
                width="4"
                height="6"
                uri="pkg:/images/ui/progress_left_$$RES$$.png"
                visible="false" />
            <Poster
                id="progress"
                height="6"
                uri="pkg:/images/ui/progress.png"
                visible="false" />
            <Poster
                id="rightProgress"
                width="4"
                height="6"
                uri="pkg:/images/ui/progress_right_$$RES$$.png"
                visible="false" />
        </Group>  
    </children>
</component>
