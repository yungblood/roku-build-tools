<?xml version="1.0" encoding="UTF-8"?>
<component name="CBSScrollableText" extends="Group">
    <script type="text/brightscript" uri="./cbsScrollableText.brs" />
    <script type="text/brightscript" uri="pkg:/components/shared/theme.brs" />
    <script type="text/brightscript" uri="pkg:/components/shared/utils.brs" />

    <script type="text/brightscript" uri="pkg:/components/framework/utilities/nodes.brs" />
    <script type="text/brightscript" uri="pkg:/source/framework/utilities/general.brs" />
    <script type="text/brightscript" uri="pkg:/source/framework/utilities/types.brs" />
    <script type="text/brightscript" uri="pkg:/source/framework/utilities/strings.brs" />
    <interface>
        <field id="text" type="string" alias="text.text" />
        <field id="weight" type="string" onChange="onWeightChanged" />
        <field id="width" type="float" alias="text.width" />
        <field id="themeColor" type="string" alias="text.themeColor" />
        <field id="style" type="string" onChange="onStyleChanged" />
        <field id="textOpacity" type="float" alias="text.opacity" />
        <field id="height" type="float" onChange="onHeightChanged" />
        <field id="horizAlign" type="string" alias="text.horizAlign" />
        <field id="vertAlign" type="string" alias="text.vertAlign" />

        <field id="scrollLines" type="integer" value="1" />
    </interface>
    <children>
        <CBSLabel
            id="measure"
            wrap="false"
            text="Sample"
            visible="false" />
        <CBSLabel
            id="text"
            wrap="true" />
        <LabelButtonGroup
            id="scrollArrows"
            layoutDirection="horiz"
            itemSpacings="[12]"
            repeatSelection="true"
            visible="false">
            <LabelButton
                id="scrollDown"
                width="32"
                height="32"
                backgroundUri="pkg:/images/ui/icon_scroll_down.png"
                focusedBackgroundUri="pkg:/images/ui/icon_scroll_down_focused.png"
                processKeyEvents="false" />
            <LabelButton
                id="scrollUp"
                width="32"
                height="32"
                backgroundUri="pkg:/images/ui/icon_scroll_up.png"
                focusedBackgroundUri="pkg:/images/ui/icon_scroll_up_focused.png"
                processKeyEvents="false" />
        </LabelButtonGroup>
        
        <Animation
            id="scrollAnimation"
            duration=".25">
            <FloatFieldInterpolator
                id="scrollInterp"
                key="[0,1]"
                keyValue="[0,1]"
                fieldToInterp="animTarget.height" />
            <Rectangle
                id="animTarget"
                width="0"
                height="0"
                visible="false" />
        </Animation>
    </children>
</component>
