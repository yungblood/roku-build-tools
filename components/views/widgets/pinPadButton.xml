<?xml version="1.0" encoding="utf-8" ?>
<component name="PinPadButton" extends="Button">
    <script type="text/brightscript" uri="pkg:/components/views/widgets/pinPadButton.brs" />
    <interface>
        <field id="pin" type="string" alias="pinPad.pin" />
        <field id="pinLength" type="string" alias="pinPad.pinLength" />
        <field id="secureMode" type="string" alias="textbox.secureMode" />
    </interface>
    <children>
        <LayoutGroup
            id="pinPadGroup"
            layoutDirection="vert"
            itemSpacings="[0,10]"
            horizAlignment="center">
            <TextEditBox
                id="textbox"
                width="368" />
            <PinPad
                id="pinPad"
                showPinDisplay="false" />
           </LayoutGroup>
    </children>
</component>
