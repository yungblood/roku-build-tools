<?xml version="1.0" encoding="UTF-8"?>
<component name="MarqueeRow" extends="Group">
    <script type="text/brightscript" uri="pkg:/components/views/widgets/rows/marqueeRow.brs" />
    <interface>
        <field id="itemComponentName" type="string" alias="list.itemComponentName" />

        <field id="content" type="node" onChange="onContentChanged" />
        <field id="itemFocused" type="integer" alias="list.itemFocused" />
        <field id="itemSelected" type="integer" alias="list.itemSelected" />
        <field id="jumpToItem" type="integer" alias="list.jumpToItem" />
        <field id="animateToItem" type="integer" alias="list.animateToItem" />
        <field id="animateToTargetSet" type="integer" alias="list.animateToTargetSet" />
        
        <field id="itemSize" type="vector2d" />
        <field id="focusedItemSize" type="vector2d" />
        <field id="itemSpacing" type="float" />
        <field id="margin" type="float" />

        <field id="focusedTargetSet" type="nodearray" />
        <field id="unfocusedTargetSet" type="node" />
        <field id="targetSet" type="node" alias="list.targetSet" />

        <field id="advanceKey" type="string" value="right" />
        <field id="reverseKey" type="string" value="left" />
        <field id="wrap" type="boolean" />
        
        <field id="rowHeight" type="float" alias="boundingRect.height" />
    </interface>
    <children>
        <Font
            id="buttonFont"
            size="24"
            uri="pkg:/fonts/Lato-Regular.ttf" />

          <!--  Rectangle is used to enforce size for dynamic layout -->
        <Rectangle
              id="boundingRect"
              width="1"
              color="0x00000000" />
        <TargetGroup
            id="list"
            duration=".5" />
        <LabelButton
            id="actionButton"
            translation="[100,521]"
            width="395"
            height="75"
            text=""
            backgroundUri="pkg:/images/frame_generic.9.png"
            focusedBackgroundUri="pkg:/images/frame_generic.9.png"
            font="dictionary:buttonFont"
            opacity=".4" />
        <LayoutGroup
            id="dots"
            translation="[100,642]"
            layoutDirection="horiz"
            itemSpacings="[8]" />
    </children>
</component>
