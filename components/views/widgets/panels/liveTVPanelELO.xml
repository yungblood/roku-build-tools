<?xml version="1.0" encoding="UTF-8"?>
<component name="LiveTVPanelELO" extends="Group">
    <script type="text/brightscript" uri="pkg:/components/views/widgets/panels/liveTVPanelELO.brs" />
    <script type="text/brightscript" uri="pkg:/components/shared/utils.brs" />
    <script type="text/brightscript" uri="pkg:/components/shared/theme.brs" />
    <script type="text/brightscript" uri="pkg:/components/shared/omniture.brs" />
    <script type="text/brightscript" uri="pkg:/components/shared/constants.brs" />
    <script type="text/brightscript" uri="pkg:/components/services/adobe/adbmobile.brs" />

    <script type="text/brightscript" uri="pkg:/source/framework/utilities/general.brs" />
    <script type="text/brightscript" uri="pkg:/source/framework/utilities/device.brs" />
    <script type="text/brightscript" uri="pkg:/source/framework/utilities/dateTime.brs" />
    <script type="text/brightscript" uri="pkg:/source/framework/utilities/debug.brs" />
    <script type="text/brightscript" uri="pkg:/source/framework/utilities/encryption.brs" />
    <script type="text/brightscript" uri="pkg:/source/framework/utilities/strings.brs" />
    <script type="text/brightscript" uri="pkg:/source/framework/utilities/types.brs" />

    <interface>
        <field id="omnitureName" type="string" value="/settings/livetv" />
        <field id="omniturePageType" type="string" value="settings" />
        <field id="omnitureSiteHier" type="string" value="other|other|settings|livetv"/>
        <field id="omnitureData" type="assocarray" />

        <field id="buttonSelected" type="string" alwaysNotify="true" />

        <function name="read" />
    </interface>
    <children>
        <LayoutGroup
            id="content"
            layoutDirection="vert"
            itemSpacings="[0]">
            <CBSLabel
                id="signedOut"
                text="You must be signed in to choose a local station"
                style="deci"
                visible="false" />
            <LayoutGroup
                id="signedIn"
                layoutDirection="vert"
                itemSpacings="[5,-20,40]"
                visible="false">
                <Rectangle
                    color="0x00000000">
                    <CBSLabel
                        id="localStationLabel"
                        translation="[20,0]"
                        width="900"
                        text="Your local station is:"
                        style="deca"
                        wrap="true" />
                </Rectangle>
                <MarkupGrid
                    id="channels"
                    itemComponentName="LiveTVTile"
                    itemSize="[900,172]"
                    itemSpacing="[24,24]"
                    numColumns="1"
                    numRows="2"
                    horizFocusAnimationStyle="floatingFocus"
                    vertFocusAnimationStyle="floatingFocus"
                    focusBitmapBlendColor="0x00000000" />
                <Rectangle
                    color="0x00000000">
                    <LayoutGroup
                        id="checkLocationGroup"
                        translation="[20,0]"
                        layoutDirection="vert"
                        itemSpacings="[44]">
                        <CBSLabel
                            id="checkLocationLabel"
                            translation="[20,0]"
                            width="900"
                            text=""
                            wrap="true"
                            style="deci" />
    
                        <CBSButton
                            id="checkLocation"
                            text="CHECK LOCATION" />
                    </LayoutGroup>
                </Rectangle>
            </LayoutGroup>
            <Group
                id="override"
                visible="false">
                <LayoutGroup
                    id="zipOverrideInfo"
                    layoutDirection="vert"
                    itemSpacings="[40]">
                    <CBSLabel
                        width="800"
                        text="Your local station is:"
                        wrap="true"
                        style="deca" />
                    <LiveTVTile
                        id="liveTVTile"
                        width="800"
                        height="172" />
                    <CBSLabel
                        id="currentLocation"
                        width="800"
                        text=""
                        wrap="true"
                        style="deci" />
                </LayoutGroup>
                <PinPad
                    id="zipCode"
                    translation="[850,0]"
                    pinLength="5"
                    secureMode="false" />
                <CBSButton
                    id="enter"
                    translation="[956,468]"
                    text="ENTER" />
            </Group>
        </LayoutGroup>
    </children>
</component>
