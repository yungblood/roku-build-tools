<?xml version="1.0" encoding="UTF-8"?>
<component name="LiveTVPanelELO" extends="Group">
    <script type="text/brightscript" uri="pkg:/components/views/widgets/panels/liveTVPanelELO.brs" />
    <script type="text/brightscript" uri="pkg:/components/shared/utils.brs" />
    <script type="text/brightscript" uri="pkg:/components/shared/omniture.brs" />
    <script type="text/brightscript" uri="pkg:/components/shared/constants.brs" />
    <script type="text/brightscript" uri="pkg:/components/services/adobe/adbmobile.brs" />

    <script type="text/brightscript" uri="pkg:/source/framework/utilities/general.brs" />
    <script type="text/brightscript" uri="pkg:/source/framework/utilities/device.brs" />
    <script type="text/brightscript" uri="pkg:/source/framework/utilities/dateTime.brs" />
    <script type="text/brightscript" uri="pkg:/source/framework/utilities/debug.brs" />
    <script type="text/brightscript" uri="pkg:/source/framework/utilities/encryption.brs" />
    <script type="text/brightscript" uri="pkg:/source/framework/utilities/strings.brs" />
    <script type="text/brightscript" uri="pkg:/source/framework/utilities/types.brs" />

    <interface>
        <field id="omnitureName" type="string" value="/settings/livetv" />
        <field id="omniturePageType" type="string" value="settings" />
        <field id="omnitureSiteHier" type="string" value="other|other|settings|livetv"/>
        <field id="omnitureData" type="assocarray" />

        <field id="buttonSelected" type="string" alwaysNotify="true" />

        <function name="read" />
    </interface>
    <children>
        <Font
            id="labelFont"
            size="32"
            uri="pkg:/fonts/Lato-Regular.ttf" />
        <Font
            id="labelBoldFont"
            size="40"
            uri="pkg:/fonts/Lato-Bold.ttf" />
        <Font
            id="buttonFont"
            size="32"
            uri="pkg:/fonts/Lato-Regular.ttf" />
        <Font
            id="focusedButtonFont"
            size="32" 
            uri="pkg:/fonts/Lato-Regular.ttf" />

        <LayoutGroup
            id="content"
            layoutDirection="vert"
            translation="[0,416]"
            itemSpacings="[0]"
            vertAlignment="center">
            <Label
                id="signedOut"
                text="You must be signed in to choose a local station"
                color="0xffffffff"
                opacity=".75"
                font="dictionary:labelFont"
                visible="false" />
            <Label
                id="unavailable"
                width="1000"
                text="Live TV streams are currently not available in your area. Be sure to check back as we are always adding more stations."
                color="0xffffffff"
                opacity=".75"
                wrap="true"
                lineSpacing="-1"
                font="dictionary:labelFont"
                visible="false" />
            <LayoutGroup
                id="signedIn"
                layoutDirection="vert"
                itemSpacings="[5,-20,40]"
                visible="false">
                <Rectangle
                    color="0x00000000">
                    <Label
                        id="localStationLabel"
                        translation="[20,0]"
                        width="900"
                        text="Your local station is:"
                        color="0xffffffff"
                        wrap="true"
                        lineSpacing="-1"
                        font="dictionary:labelBoldFont"
                        opacity=".75" />
                </Rectangle>
                <MarkupGrid
                    id="channels"
                    itemComponentName="LiveTVTile"
                    itemSize="[900,172]"
                    itemSpacing="[24,24]"
                    numColumns="1"
                    numRows="2"
                    horizFocusAnimationStyle="floatingFocus"
                    vertFocusAnimationStyle="floatingFocus"
                    focusBitmapBlendColor="0x3e96ef00" />
                <Rectangle
                    color="0x00000000">
                    <LayoutGroup
                        id="checkLocationGroup"
                        translation="[20,0]"
                        layoutDirection="vert"
                        itemSpacings="[44]">
                        <Label
                            id="checkLocationLabel"
                            translation="[20,0]"
                            width="900"
                            text=""
                            wrap="true"
                            lineSpacing="-1"
                            color="0xffffffff"
                            font="dictionary:labelFont"
                            opacity=".75" />
    
                        <LabelButton
                            id="checkLocation"
                            width="394"
                            height="73"
                            text="CHECK LOCATION"
                            textColor="0xffffffff"
                            focusedTextColor="0xffffffff"
                            backgroundUri="pkg:/images/upsell_button.9.png"
                            focusedBackgroundUri="pkg:/images/upsell_button_focused_noborder.9.png"
                            font="dictionary:buttonFont"
                            focusedFont="dictionary:focusedButtonFont" />
                    </LayoutGroup>
                </Rectangle>
            </LayoutGroup>
            <Group
                id="override"
                visible="false">
                <LayoutGroup
                    id="zipOverrideInfo"
                    layoutDirection="vert"
                    itemSpacings="[40]">
                    <Label
                        width="800"
                        text="Your local station is:"
                        color="0xffffffff"
                        wrap="true"
                        lineSpacing="-1"
                        font="dictionary:labelBoldFont"
                        opacity=".75" />
                    <LiveTVTile
                        id="liveTVTile"
                        width="800"
                        height="172" />
                    <Label
                        id="currentLocation"
                        width="800"
                        text=""
                        wrap="true"
                        lineSpacing="-1"
                        color="0xffffffff"
                        font="dictionary:labelFont"
                        opacity=".75" />
                </LayoutGroup>
                <PinPad
                    id="zipCode"
                    translation="[850,0]"
                    pinLength="5"
                    secureMode="false" />
                <LabelButton
                    id="enter"
                    translation="[956,468]"
                    width="200"
                    height="73"
                    text="ENTER"
                    textColor="0xffffffff"
                    focusedTextColor="0xffffffff"
                    backgroundUri="pkg:/images/upsell_button.9.png"
                    focusedBackgroundUri="pkg:/images/upsell_button_focused_noborder.9.png"
                    font="dictionary:buttonFont"
                    focusedFont="dictionary:focusedButtonFont" />
            </Group>
        </LayoutGroup>
    </children>
</component>
