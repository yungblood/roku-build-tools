<?xml version="1.0" encoding="UTF-8"?>
<component name="SettingsLabel" extends="Group">
    <script type="text/brightscript" uri="pkg:/components/views/widgets/settingsLabel.brs" />
    <interface>
        <field id="title" type="string" alias="title.text" />
        <field id="value" type="string" alias="value.text" />
    </interface>
    <children>
        <LayoutGroup
            layoutDirection="vert"
            itemSpacings="[4]">
            <CBSLabel
                id="title"
                style="deci"
                weight="bold" />
            <CBSLabel
                id="value"
                style="micro"
                themeColor="fiftyShadesOfCBS" />
        </LayoutGroup>
    </children>
</component>
