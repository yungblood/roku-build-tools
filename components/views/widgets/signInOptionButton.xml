<!--                 horizAlign="center" -->
<!--                 lineSpacing="0" -->
<!--                 wrap="true" -->
<!--                 text="" -->
<!--                 font="dictionary:disclaimerFont" /> -->
        </LayoutGroup>
    </children>
</component>
